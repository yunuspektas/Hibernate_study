<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>


		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/test_db</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>


		<!-- validate, update, create, create-drop -->
		<!-- create: uygulama her çalıştıgında tablolar yeniden oluşur, database 
			her seferinde sıfırlanır, development aşamasında kullanıulır genelde -->
		<!-- create-derop : uygulama her run edildiğinde tablolar oluşur, uygulama 
			kapatıldıgında tablolar silinir -->
		<!-- validate : veritabanında bir değişiklik yapmaz, şemanın validate mi 
			diye kontrol eder. -->
		<!-- update : sınıflarda yapılan değişikliğe göretabloları update eder. -->
		<property name="hbm2ddl.auto">update</property>
		<!-- uygulama run edildiğinde çalıştıgını konsolda gösterir -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>


		<!-- day03 deki mapping işlemleri için gerekli( oneToOne ) -->
		<mapping class="com.hb03.onetoone.Student03" />
		<mapping class="com.hb03.onetoone.Diary" />



	</session-factory>
</hibernate-configuration>